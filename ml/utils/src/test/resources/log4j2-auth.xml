<?xml version="1.0" encoding="UTF-8"?>
<!-- this is the log configuration for the global registration test -->
<Configuration status="WARN">
  <Properties>
    <Property name="filename">target/regtests.log</Property>
  </Properties>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <!-- %d %p %C{1.} [%t] %m%n -->
      <PatternLayout pattern="%d{HH:mm:ss.SSS} %X{Request-ID} %-5level %F:%L - %msg%n"/>
    </Console>
    <File name="File" fileName="${filename}">
      <PatternLayout>
        <Pattern>%d|%X{Request-ID}|%p|%C|%F:%L| %m%n</Pattern>
      </PatternLayout>
    </File>
  </Appenders>
  <Loggers>
    <Root level="TRACE">
      <AppenderRef ref="Console" level="INFO"/>
      <AppenderRef ref="File" level="TRACE"/>
    </Root>
  </Loggers>
</Configuration>
