<?xml version="1.0" encoding="UTF-8"?>
<!-- this is the default configuration for running the test server (status="trace") -->
<Configuration status="WARN" name="V4 Repository Test Server" strict="true" verbose="true">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <!-- %d %p %C{1.} [%t] %m%n -->
            <!-- %d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n -->
            <PatternLayout>
                <Pattern>%d{yy/MM/dd HH:mm:ss.SSS}|%-5p|%F:%L|%t|%X{Request-ID}|%m%n</Pattern>
            </PatternLayout>
        </Console>
        <File name="LogFile" fileName="logs/ml-repository.log">
            <PatternLayout>
                <Pattern>%d{yy/MM/dd HH:mm:ss.SSS}|%-5p|%C.$%M(%F:%L)|%t|%X{Request-ID}|%m%n</Pattern>
            </PatternLayout>
        </File>
        <!-- this is a file for security messages -->
        <File name="SecurityFile" fileName="logs/ml-repository-security.log">
            <PatternLayout>
                <Pattern>%d{yy/MM/dd HH:mm:ss.SSS}|%-5p|%C.$%M(%F:%L)|%X{Request-ID}|%m%n</Pattern>
            </PatternLayout>
        </File>
        <!-- this is a file for access logging -->
        <File name="AccessFile" fileName="logs/ml-repository-http-access.log">
            <PatternLayout>
                <Pattern>AccessLog: %m%n</Pattern>
            </PatternLayout>
        </File>
        <!-- this is a file for exceptions -->
        <File name="ExceptionsFile" fileName="logs/ml-repository-exceptions.log">
            <PatternLayout>
                <Pattern>%d{yy/MM/dd HH:mm:ss.SSS}|%-5p|%X{Request-ID}|%m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="com.ibm.analytics.wml.service.utils.security" level="TRACE" additivity="false">
            <AppenderRef ref="SecurityFile"/>
        </Logger>
        <Logger name="com.ibm.analytics.wml.service.utils.http" level="TRACE" additivity="false">
            <AppenderRef ref="SecurityFile"/>
        </Logger>
        <Logger name="http-access" level="DEBUG" additivity="false">
            <AppenderRef ref="AccessFile"/>
        </Logger>
        <Logger name="exception-logger" level="DEBUG" additivity="false">
            <AppenderRef ref="ExceptionsFile"/>
        </Logger>

        <Logger name="com.ibm.analytics.wml.utils.clients.http" level="DEBUG"/>
        <Logger name="com.ibm.analytics.wml.utils.clients.reporting" level="WARN"/>

        <Logger name="org.apache.http" level="INFO"/>
        <!--
        <Logger name="com.ibm" level="WARN" additivity="true">
            <AppenderRef ref="WarningsFile"/>
        </Logger>
        -->
        <!-- TRACE, DEBUG, INFO, WARN, ERROR, ALL or OFF -->
        <Root level="TRACE">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="LogFile"/>
        </Root>
    </Loggers>
</Configuration>
